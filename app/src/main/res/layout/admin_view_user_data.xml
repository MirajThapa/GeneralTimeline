<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/admin_view_user_data_part"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_field"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/admin_view_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="25dp"/>

        <TextView
            android:id="@+id/admin_view_user_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/admin_view_user_name"
            android:textColor="@color/white"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/admin_view_user_delete"
            android:layout_below="@+id/admin_view_user_email"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:text="delete"/>

    </LinearLayout>



</LinearLayout>